<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_list_cart"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/payCardView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/flowerImage"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mexican_golden_barrel_cactus" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/flowerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/payCardView"
        android:text="mexican_golden_barrel_cactus"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/flowerPay"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FlowerNumber"
        android:layout_alignBottom="@+id/FlowerNumber"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/payCardView"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="$540"
        android:textColor="#FF1E1E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/flowerAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FlowerNumber"
        android:layout_alignBottom="@+id/FlowerNumber"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/flowerPay"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_add_circle_24" />

    <TextView
        android:id="@+id/FlowerNumber"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_below="@+id/flowerName"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/flowerAdd"
        android:gravity="center"
        android:text="10" />

    <ImageButton
        android:id="@+id/floweRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FlowerNumber"
        android:layout_alignBottom="@+id/FlowerNumber"
        android:layout_toRightOf="@+id/FlowerNumber"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_remove_circle_24" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/FlowerNumber"
        android:layout_alignBottom="@+id/FlowerNumber"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/floweRemove"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_delete_24" />
</RelativeLayout>