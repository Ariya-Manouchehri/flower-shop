<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/RelativelayoutList"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageListCategory"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp" />

        <TextView
            android:id="@+id/nameListCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imageListCategory"
            android:textColor="@color/centerGradient"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/countListCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameListCategory"
            android:layout_alignLeft="@+id/nameListCategory"
            android:layout_marginTop="10dp"
            android:textColor="#6003082b"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>